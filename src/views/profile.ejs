<%- include('partials/nav.ejs') %> 
<%- include('partials/header.ejs') %> 

  <div class="container-sm">
    <form class="mb-3" id="form-profile" enctype="application/x-www-form-urlencoded"
    method="POST" action="/profile/<%= profile.idVolunteer %> ">
      <h3>Seja mais um colaborador</h3>
      <div class="mb-3 row">
        <label for="" class="col-sm-2 col-form-label">Nome Completo</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" 
          min="3" id="full_name" 
          placeholder="Clarice Lispector"
          value="<%= profile.fullName %> ">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="" class="col-sm-2 col-form-label">Usu√°rio</label>
        <div class="col-sm-10">
          <input type="text" class="form-control"
           min="3" id="userName" 
           placeholder="claLisp"
           value="<%= profile.userName %> ">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="" class="col-sm-2 col-form-label">CPF</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" 
          min="11" max="11" id="cpf" 
          placeholder="134.600.854-91"
          value="<%= profile.cpf %> ">
        </div>
      </div>

      <div class="mb-3 row">
        <label for="" class="col-sm-2 col-form-label">Data Nascimento</label>
        <div class="col-sm-10">
          <input type="date" class="form-control"
           id="dateBirthWriter" 
           value="<%= profile.dateBirthUser %>">
        </div>
      </div>

      <div class="mb-3 row">
        <label for="" class="col-sm-2 col-form-label">E-mail</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" 
          id="email" 
          placeholder="clarice@example.com"
          value="<%= profile.email %> ">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="" class="col-sm-2 col-form-label" id="password">Senha</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" min="8" id="staticEmail">
        </div>
      </div>

      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <button class="btn btnUpdate" type="submit" form="form-profile">Atualizar</button>
        <button class="btn btnCancel" type="submit" form="form-profile">Excluir</button>
      </div>
    </form>
  </div>
  
<%- include('partials/footer.ejs') %> 
