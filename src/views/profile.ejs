<%- include('partials/header.ejs') %> 

  <div class="container-sm">
    <form class="mb-3" >
      <h3> <img src="/images/book.svg"></img> </i></i>Seja mais um colaborador</h3>
      <div class="mb-3 row">
        <label for="" class="col-sm-2 col-form-label">Nome Completo</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" 
          min="3" id="full_name" 
          placeholder="Clarice Lispector"
          value="<%= volunteer.fullName %> ">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="" class="col-sm-2 col-form-label">Usu√°rio</label>
        <div class="col-sm-10">
          <input type="text" class="form-control"
           min="3" id="userName" 
           placeholder="claLisp"
           value="<%= volunteer.userName %> ">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="" class="col-sm-2 col-form-label">CPF</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" 
          min="11" max="11" id="cpf" 
          placeholder="134.600.854-91"
          value="<%= volunteer.cpf %> ">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="" class="col-sm-2 col-form-label">E-mail</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" 
          id="email" 
          placeholder="clarice@example.com"
          value="<%= volunteer.email %> ">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="" class="col-sm-2 col-form-label" id="password">Senha</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" min="8" id="staticEmail">
        </div>
      </div>

      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <button class="btn btnUpdate" type="submit" form->Atualizar</button>
        <button class="btn btnCancel" type="button">Cancelar</button>
      </div>
    </form>
  </div>
  
