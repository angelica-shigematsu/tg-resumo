<%- include('partials/header.ejs') %> 
<%- include('partials/nav.ejs')  %> 
  <div class="container-sm">
    <h3>Sua denúncia</h3>
    <form class="mb-3" id="form-report" enctype="application/x-www-form-urlencoded"
      method="POST" action="/denuncia/alterar/<%=report.id%>"> 
      <input type="text" name="refReport" value="<%=report.id%>" hidden> 
      <h5><%=summary.book.title%></h3>
      <div class="mb-3 row">
        <div class="mb-3 row">
          <label for="" class="col-sm-2 col-form-label">Resumo</label>
          <div class="col-sm-10">
            <textarea class="form-control" minlength="30" name="body" cols="30" rows="10" disabled><%=summary.body%></textarea>
           </div>
        </div>
        <div class="mb-3 row">
          <label for="" class="col-sm-2 col-form-label">Motivo da denúncia</label>
          <div class="col-sm-10">
            <input type="text" name="reason" value="<%=report.reason%>"> 
          </div>
        </div>
        <div class="mb-3 row">
          <label for="" class="col-sm-2 col-form-label">Status</label>
          <div class="col-sm-10">
            <select class="form-select" aria-label="Default select example" name="status">
              <option selected><%=status%></option>
            </select>
          </div>
          </div>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
          <div class="col-sm-1">
            <button class="btn btnUpdate" type="submit" form="form-report">Atualizar</button>
          </div>
        </form>
          <div class="col-sm-1">
            <form class="mb-3" enctype="application/x-www-form-urlencoded"
              method="POST" action="/denuncia/excluir">
              <input type="text" value="<%=report.id%>" name="id" hidden>
              <button class="btn btnCancel" type="submit">Excluir</button>
            </form>
          </div>
        </div>
  </div>
  
<%- include('partials/footer.ejs') %> 