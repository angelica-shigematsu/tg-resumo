<%- include('partials/nav.ejs')  %> 
<%- include('partials/header.ejs') %> 

<body>
  <div class="container-sm">
    <form class="mb-3" id="form-book" enctype="application/x-www-form-urlencoded"
    method="POST" action="/livro">
      <h3>Cadastro de Livro</h3>
      <div class="mb-3 row">
        <label for="" class="col-sm-2 col-form-label">Título</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" minlenght="3" id="title" name="title">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="" class="col-sm-2 col-form-label">Autor</label>
        <div class="col-sm-10">
          <select class="form-select col-sm-6" aria-label="Default select example" name="refWriter">
            <% writers.forEach((writer) => { %> 
              <option value="<%= writer.idWriter %>"><%= writer.nameWriter %></option>
            <% }) %>
          </select>
        </div>
      </div>
      <div class="mb-3 row">
        <label for="" class="col-sm-2 col-form-label">Editora</label>
        <div class="col-sm-10">
          <input type="text" class="form-control"  id="publishingCompany" name="publishingCompany">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="" class="col-sm-2 col-form-label">Gênero</label>
        <div class="col-sm-10">
          <select class="form-select" aria-label="Default select example" name="genre">
              <option selected>Ficção</option>
              <option selected>Não Ficção</option>
              <option selected>Ciências Exatas</option>
              <option selected>Ciência Biológicas</option>
              <option selected>Ciência Sociais</option>
              <option selected>Tecnologia</option>
          </select>
      </div>
        </div>
      <div class="mb-3 row">
        <label for="" class="col-sm-2 col-form-label">Ano</label>
        <div class="col-sm-10">
          <input type="number" class="form-control" id="year" name="year">
        </div>
      </div>
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <button class="btn btnProgress" type="submit" form="form-book">Cadastrar</button>
      </div>
    </form>
  </div>
  
<%- include('partials/footer.ejs') %> 
    