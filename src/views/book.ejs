<%- include('partials/nav.ejs')  %> 
<%- include('partials/header.ejs') %> 

<body>
  <div class="container-sm">
    <form class="mb-3">
      <h3>Cadastro de Livro</h3>
      <div class="mb-3 row">
        <label for="" class="col-sm-2 col-form-label">Título</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" min="3" id="title">
        </div>
      </div>
      <div class="col-sm-10">
        <label for="" class="col-sm-2 col-form-label">Autor</label>
        <select class="form-select col-sm-6" aria-label="Default select example" name="writer">
          <% writers.forEach((writer) => { %> 
            <option value="<% writer.idWriter %>"><%= writer.nameWriter %></option>
          <% }) %>
        </select>
    </div>

      <div class="mb-3 row">
        <label for="" class="col-sm-2 col-form-label">Editora</label>
        <div class="col-sm-10">
          <input type="combobox" class="form-control"  id="editor" name="company">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="" class="col-sm-2 col-form-label">Gênero</label>
        <div class="col-sm-10">
          <select class="form-select" aria-label="Default select example" name="genre">
              <option selected>Ficção</option>
              <option selected>Não Ficção</option>
              <option selected>Ciências Exatas</option>
              <option selected>Ciência Biológicas</option>
              <option selected>Ciência Sociais</option>
              <option selected>Tecnologia</option>
          </select>
      </div>
        </div>
      <div class="mb-3 row">
        <label for="" class="col-sm-2 col-form-label">Ano</label>
        <div class="col-sm-10">
          <input type="date" class="form-control" id="year">
        </div>
      </div>
      <div class="mb-3">
        <label for="formFile" class="form-label">Upload da Imagem do Livro</label>
        <input class="form-control" type="file" id="formFile">
      </div>
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <button class="btn btnProgress" type="button">Cadastrar</button>
        <button class="btn btnUpdate" type="button">Atualizar</button>
        <button class="btn btnCancel" type="button">Cancelar</button>
      </div>
    </form>
  </div>
  
<%- include('partials/footer.ejs') %> 
    