<%- include('partials/header.ejs') %> 
<%- include('partials/nav.ejs')  %> 
  <div class="container-sm">
    <h3>Denuncias</h3>
    <form class="mb-3" id="form-report" enctype="application/x-www-form-urlencoded"
      method="POST" action="/denuncia/alterar/<%=report.id%>">   
      <h5><%=summary.book.title%></h3>
      <div class="mb-3 row">
        <label for="" class="col-sm-2 col-form-label">Denunciado</label>
        <div class="col-sm-10">
          <select class="form-select" aria-label="Default select example" name="active">
            <% if (report.active) {%>
              <option selected <%=report.active%>>Sim</option>
            <% } else { %>
              <option selected <%=report.active%>>Não</option>
            <% } %>
          </option>
          <option value="<%=0%>">Não</option>
          <option value="<%=1%>">Sim</option>
          </select>
      </div>
    </form>
    <div class="mb-3 row">
      <label for="" class="col-sm-2 col-form-label">Resumo</label>
      <div class="col-sm-10">
        <textarea class="form-control" minlength="30" name="body" cols="30" rows="10" disabled><%=report.summaryBook.body%></textarea>
      </div>
    </div>
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
      <button class="btn btnProgress" type="submit" form="form-report">Atualizar</button>
      <form class="mb-3" enctype="application/x-www-form-urlencoded"
        method="POST" action="/denuncia/excluir">
        <input type="text" value="<%=report.id%>" name="id" hidden>
        <input type="text" value="<%=report.user.id%>" name="userId" hidden>
        <button type="submit" class="btn btn-danger">Excluir</button>
      </form>
    </div>
  </div>
  
<%- include('partials/footer.ejs') %> 