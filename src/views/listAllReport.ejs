<%- include('partials/nav.ejs')  %> 
<%- include('partials/header.ejs') %> 
<h3>Todas as Denúncias</h3>
</br>
<% reports.forEach(report => { %>
  <div class="card w-75">
    <div class="card-body">
      <h5 class="card-title">Data da denúncia: <%= report.createdAt.getDate() %>/<%= report.createdAt.getMonth()+1 %>/<%= report.createdAt.getFullYear() %> %></h5>
      <p class="card-text">
      <p>Avaliado: <%=report.status%></p>
      <form action="/denuncia/avaliacao/<%=report.id%>" id="form-report" method="POST">
        <button type="submit" class="btn btn-primary" form="form-report">Verificar</button>
      </form>
    </div>
  </div>
<% }) %>

<%- include('partials/footer.ejs') %> 