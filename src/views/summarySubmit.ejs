<%- include('partials/nav.ejs')  %> 
<%- include('partials/header.ejs') %> 

<body>
  <div class="container-sm">
    <form class="mb-3" id="form-summary-submit" enctype="application/x-www-form-urlencoded"
    method="POST" action="/titulo/submit">
      <h3>Cadastro de Resumo</h3>
      <div class="mb-3 row">
        <label for="" class="col-sm-2 col-form-label">TÃ­tulo</label>
        <div class="col-sm-10">
          <select class="form-select col-sm-6" aria-label="Default select example" name="id" required>
            <option value="<%= book.id %>"><%= book.title %></option>
          </select>
        </div>
      </div>
      <div class="mb-3 row">
        <label for="" class="col-sm-2 col-form-label">Autor</label>
        <div class="col-sm-10">
          <select class="form-select col-sm-6" aria-label="Default select example" name="refWriter" required>
            <option value="<%= book.refWriter %>"><%= writer.nameWriter %></option>
          </select>
        </div>
      </div>
      <div class="mb-3 row">
        <label for="" class="col-sm-2 col-form-label">Resumo</label>
        <div class="col-sm-10">
          <textarea class="form-control" minlength="30" name="body" cols="30" rows="10" required></textarea>
        </div>
      </div>
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <button class="btn btnProgress" type="submit" form="form-summary-submit">Cadastrar</button>
      </div>
    </form>
  </div>
  
