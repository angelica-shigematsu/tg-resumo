<%- include('partials/nav.ejs')  %> 
<%- include('partials/header.ejs') %> 

<body>
  <div class="container-sm">
    <form class="mb-3">
      <h3>Cadastro de Livro</h3>
      <form id="form-title" enctype="application/x-www-form-urlencoded"
       method="POST" action="/titulo"></form>
      <div class="mb-3 row">
        <label for="" class="col-sm-2 col-form-label">Título</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" min="3" id="title" value="<%= book.title %>" disabled>
        </div>
      </div>
      <button class="btn btnProgress" type="submit" form="form-title">Pesquisar</button>
    </form>
      <div class="col-sm-10">
        <label for="" class="col-sm-2 col-form-label">Autor</label>
        <select class="form-select col-sm-6" aria-label="Default select example" name="writer" disabled>
          <option value="<%= book.refWriter %>"><%= writer.nameWriter %></option>
        </select>
    </div>
    <div class="col-sm-10">
      <label for="" class="col-sm-2 col-form-label">Voluntário</label>
      <select class="form-select col-sm-6" aria-label="Default select example" name="writer">
        <select class="form-select col-sm-6" aria-label="Default select example" name="writer">
        
        </select>
      </select>
  </div>
    <div class="mb-3 row">
      <label for="" class="col-sm-2 col-form-label">Resumo</label>
      <div class="col-sm-10">
        <textarea class="form-control" name="body" cols="30" rows="10"></textarea>
      </div>
    </div>
    
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <button class="btn btnProgress" type="button">Cadastrar</button>
        <button class="btn btnUpdate" type="button">Atualizar</button>
        <button class="btn btnCancel" type="button">Cancelar</button>
      </div>
    </form>
  </div>
  
<%- include('partials/footer.ejs') %> 
    