<%- include('partials/nav.ejs')  %> 
<%- include('partials/header.ejs') %> 

<body>
  <div class="container-sm">
    <form class="mb-3" id="form-question" enctype="application/x-www-form-urlencoded"
    method="POST" action="/questao">
      <h3>Cadastro de Pergunta e resposta</h3>
      <div class="mb-3 row">
        <div class="col-sm-10">
          <label for="" class="col-sm-2 col-form-label">Livro</label>
          <select class="form-select col-sm-6" aria-label="Default select example" name="refBook">
            <% books.forEach(book => { %>
              <option value="<%=book.id %>" name="refBook"><%= book.title %></option>
            <% });%>
          </select>
        </div>
        <div class="col-sm-10">
          <label for="" class="col-sm-2 col-form-label">VoluntÃ¡rio</label>
          <select class="form-select col-sm-6" aria-label="Default select example" name="refVolunteer" required>
            <option value="<%=profile.id%>"><%=profile.fullName%></option>
        </select>
        </div>
        <div class="col-sm-10">
          <label for="" class="col-sm-2 col-form-label">Pergunta</label>
            <input type="text" class="form-control" minlength="10" name="question" required>
        </div>
        <div class="col-sm-10">
          <label for="" class="col-sm-2 col-form-label">Resposta</label>
          <textarea type="text" class="form-control" minlength="10" cols="30" rows="20"name="answer" required></textarea>
        </div>

      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <button class="btn btnProgress" type="submit" form="form-question">Cadastrar</button>
      </div>
    </form>
  </div>
  
<%- include('partials/footer.ejs') %> 
    