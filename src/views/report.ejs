<%- include('partials/header.ejs') %> 
<%- include('partials/nav.ejs')  %> 
<form action="/denuncia" id="form-report" method="POST">
  <div class="container-sm">
    <input type="text" value="<%=summaryId%>" name="refSummary" hidden>
    <input type="text" value="<%=profile.id%>" name="refUser" hidden>
    </div>
    <div class="mb-3 row">
      <label for="" class="col-sm-2 col-form-label">Motivo: (plágio, ética e moral, preconceito, incitação a violência)</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" 
        minlength="3" 
        placeholder="Motivo" 
        name="reason"
        required>
      </div>
    </div>
    <button type="submit" class="btn btn-danger" form="form-report">Denunciar</button>
  </form>
<%- include('partials/footer.ejs') %> 