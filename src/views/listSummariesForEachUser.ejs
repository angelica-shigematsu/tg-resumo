<div class="d-lg-flex justify-content-end col">
  <form id="form-search" enctype="application/x-www-form-urlencoded"
    method="POST" action="/usuario/nav">
    <div class="mb-3 row">
      <div class="col-sm-8">
        <input class="form-control me-2" type="search" placeholder="Procure seus resumos" name="searchSummary" aria-label="Search"/>
      </div>
      <div class="col-sm-3">
        <button class="btn btn-outline-success col" form="form-search" type="submit">Search</button>
      </div>
    </div>
  </form>
</div>

  <% if (messageError) { %>
    <div class="alert alert-warning" role="alert">
      <%=messageError%>
    </div>
  <%} else {%>
  <% summaries.forEach(summary => { %>
    <%if (summary.refUser == profile.id){%>
      <div class="card w-75">
        <div class="card-body">
          <h5 class="card-title">Livro: <%= summary.book.title %></h5>
          <p class="card-text">
          <p>Autor do Livro: <%=summary.writer.nameWriter%></p>
          <p>Escritor do resumo: <%=summary.user.fullName%></p>
          <p><%=summary.status%></p>
          <p>Avaliação:
            <% let result = 0
            let lengthRate = 0 %>
            <%ratings.forEach(listRate=>  {
            if (listRate.refSummary === summary.id) {
            result+= listRate.ratingStar
              lengthRate++
          }
        })%>
        <% if (isNaN(result)) {%> <%=0%> <%} else {%> <%=(result/lengthRate).toFixed(2)%> <%}%>
        </p>
          <a href="/resumo/listaResumo/<%= summary.id%>" class="btn btn-primary" type="submit" form="form-autor">Detalhes</a>
        </div>
      </div>
      <%}%>
  <% }) %>
<% } %>
