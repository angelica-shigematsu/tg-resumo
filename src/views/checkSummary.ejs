<%- include('partials/header.ejs') %> 
<%- include('partials/nav.ejs')  %> 

  <div class="container-sm">
    <h3>Correção de resumos</h3>
    <form class="mb-3" id="form-check-summary" enctype="application/x-www-form-urlencoded"
      method="POST" action="/correcao/resumo/<%=summary.id%>">
      <div class="mb-3 row">
      <label for="" class="col-sm-2 col-form-label">Título</label>
      <select class="form-select col-sm-6" aria-label="Default select example" name="refSummary">
        <option value="<%= summary.id %>" name="refBook"><%= summary.book.title %></option>
      </select>
      </div>
      <div class="col-sm-10">
        <label for="" class="col-sm-2 col-form-label">Usuário</label>
        <select class="form-select col-sm-6" aria-label="Default select example" name="refUser" required>
          <option value="<%= summary.refUser %>"><%=summary.user.fullName%></option>
      </select>
      </div>
      <div class="mb-3 row">
        <label for="" class="col-sm-2 col-form-label">Resumo</label>
        <div class="col-sm-10">
          <textarea class="form-control" minlength="30" name="body" cols="30" rows="10" disabled>
            <%=summary.body%>
          </textarea>
        </div>
      </div>
      <div class="mb-3 row">
        <label for="" class="col-sm-2 col-form-label">Status</label>
        <div class="col-sm-10">
          <select class="form-select" aria-label="Default select example" name="status">
              <option>Recusado</option>
              <option>Aprovado</option>
              <option>Devolvido</option>
          </select>
      </div>
      <div class="mb-3 row">
        <label for="" class="col-sm-2 col-form-label">Comentário</label>
        <div class="col-sm-10">
          <textarea class="form-control" minlength="5" name="comment" cols="30" rows="10"></textarea>
        </div>
      </div>
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <button class="btn btnProgress" type="submit" form="form-check-summary">Avaliar</button>
      </div>
    </form>
    </div>
  </div>
  
<%- include('partials/footer.ejs') %> 
    