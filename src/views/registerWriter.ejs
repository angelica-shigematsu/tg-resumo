<%- include('partials/nav.ejs')  %> 
<%- include('partials/header.ejs') %> 
<body>
  <div class="container-sm">
    <form class="mb-3" id="form-autor" enctype="application/x-www-form-urlencoded"
      method="POST" action="/autor">
      <h3>Cadastro do Autor</h3>
      <div class="mb-3 row">
        <label for="" class="col-sm-2 col-form-label">Nome Completo</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" 
            min="3" id="fullName" 
            placeholder="Clarice Lispector" 
            name="fullName">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="" class="col-sm-2 col-form-label">Data de Nascimento</label>
        <div class="col-sm-10">
          <input type="date" class="form-control" 
             id="dateBirthWriter"
            name="dateBirthWriter">
        </div>
      </div>
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <button class="btn btnProgress" type="submit" form="form-autor">Cadastrar</button>
        <button class="btn btnUpdate" type="button">Atualizar</button>
        <button class="btn btnCancel" type="button">Cancelar</button>
      </div>
    </form>
  </div>
<%- include('partials/footer.ejs') %> 