<%- include('partials/nav.ejs') %> 
<%- include('partials/header.ejs') %> 

  <div class="container-sm">
    <h3>Edição de Escritor</h3>
    <form class="mb-3" id="form-writer" enctype="application/x-www-form-urlencoded"
        method="POST" action="/autor/alterar/<%= writers.idWriter %>">
      <div class="mb-3 row">
        <input type="text" value="<%=writers.idWriter%>" hidden>
        <label for="" class="col-sm-2 col-form-label">Nome Completo</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" 
          min="3" id="full_name" 
          placeholder="Clarice Lispector"
          name="nameWriter"
          value="<%= writers.nameWriter %>">
        </div>
      </div>

      <div class="mb-3 row">
        <label for="" class="col-sm-2 col-form-label">Data Nascimento</label>
        <div class="col-sm-10">
          <input type="date" class="form-control"
           id="dateBirthWriter" 
           name="dateBirthWriter"
           value="<%= writers.dateBirthWriter %>">
        </div>
      </div>

      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <button class="btn btnUpdate" type="submit" form="form-writer">Atualizar</button>
        <form class="mb-3" id="form-delete" enctype="application/x-www-form-urlencoded"
        method="POST" action="/autor/delete">
          <button class="btn btnCancel" type="submit" form="form-delete">Excluir</button>
        </form>
      </div>
      </form>
  </div>
  
<%- include('partials/footer.ejs') %> 
