<%- include('partials/nav.ejs')  %> 
<%- include('partials/header.ejs') %> 

  <div class="container-sm">
    <h3>Edição de Escritor</h3>
    <form class="mb-3" id="form-writer" enctype="application/x-www-form-urlencoded"
        method="POST" action="/autor/alterar/<%= writers.idWriter %>">
      <div class="mb-3 row">
        <input type="text" value="<%= writers.idWriter %>" hidden>
        <label for="" class="col-sm-2 col-form-label">Nome Completo</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" 
          min="3" id="full_name" 
          placeholder="Clarice Lispector"
          name="nameWriter"
          value="<%= writers.nameWriter %>">
        </div>
      </div>
      </form>
      <%if(profile.level == "Voluntario" || profile.level == "Administrador") {%>
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <div class="col-sm-1">
          <button class="btn btnUpdate" type="submit" form="form-writer">Atualizar</button>
        </div>
        <div class="col-sm-1">
          <form class="mb-3" enctype="application/x-www-form-urlencoded"
            method="POST" action="/autor/excluir">
            <input type="text" value="<%=writers.idWriter%>" name="id" hidden>
            <button class="btn btnCancel" type="submit">Excluir</button>
          </form>
        </div>
      </div>
      <%}%>
  </div>
<%- include('partials/footer.ejs') %> 
