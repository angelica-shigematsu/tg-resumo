<%- include('partials/nav.ejs') %> 
<%- include('partials/header.ejs') %> 

  <div class="container-sm">
    <form class="mb-3" id="form-writer" enctype="application/x-www-form-urlencoded"
    method="POST" action="/autor/alterar/<%= writer.idWriter %> ">
      <h3>Seja mais um colaborador</h3>
      <div class="mb-3 row">
        <label for="" class="col-sm-2 col-form-label">Nome Completo</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" 
          min="3" id="full_name" 
          placeholder="Clarice Lispector"
          value="<%= writer.nameWriter %> ">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="" class="col-sm-2 col-form-label">Data Nascimento</label>
        <div class="col-sm-10">
          <input type="date" class="form-control"
           id="dateBirthWriter" 
           value="<%= writer.dateBirthWriter %> ">
        </div>
      </div>
      
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <button class="btn btnUpdate" type="submit" form="form-writer">Atualizar</button>
        <button class="btn btnCancel" type="submit" form="form-writer">Excluir</button>
      </div>
    </form>
  </div>
  
<%- include('partials/footer.ejs') %> 
